<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".User.UserHelpAndSupportActivity">

    <!-- Back Arrow -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corner_background"
        android:src="@drawable/back"
        android:contentDescription="@string/back_button_desc" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/back_button"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black" />

    <!-- FAQ -->
    <LinearLayout
        android:id="@+id/faq_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_below="@id/back_button"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/faq_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FAQ"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/faq_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <!-- Contact Support -->
    <LinearLayout
        android:id="@+id/contact_support_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_below="@id/faq_container"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/contact_support_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Support"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/contact_support_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <!-- Troubleshooting Tips Title -->
    <TextView
        android:id="@+id/troubleshooting_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Troubleshooting Tips"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/contact_support_container"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/black" />

    <!-- Troubleshooting Tips List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/troubleshooting_tips_title"
        android:layout_marginTop="16dp">

        <!-- Tip 1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/presence_online"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:id="@+id/tip1_dot" />

            <TextView
                android:id="@+id/tip1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to reset your password"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tip1_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Article"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_marginStart="16dp"
                android:layout_below="@id/tip1_title"
                android:layout_marginTop="4dp" />
        </RelativeLayout>

        <!-- Tip 2 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/presence_online"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:id="@+id/tip2_dot" />

            <TextView
                android:id="@+id/tip2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What to do if you can't log in"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tip2_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Article"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_marginStart="16dp"
                android:layout_below="@id/tip2_title"
                android:layout_marginTop="4dp" />
        </RelativeLayout>

        <!-- Tip 3 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/presence_online"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:id="@+id/tip3_dot" />

            <TextView
                android:id="@+id/tip3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can't receive verification code"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tip3_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Article"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_marginStart="16dp"
                android:layout_below="@id/tip3_title"
                android:layout_marginTop="4dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
